<div class='container'>
  <%= image_tag 'joyful12_logo.png', alt: 'Joyful12 from Joyfoodly.', class: 'sign-in-logo img-responsive center-block' %>

  <h2 class='text-center'>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-signin', method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>

    <%= f.submit 'Email password reset instructions', class: 'btn btn-lg btn-primary btn-block' %>

    <%= render 'devise/shared/links' %>
  <% end %>
</div>
