<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-4'>
      <h2 class='form-signup-header'>Give the gift of Joyful12</h2>
      <div class='account-info'>
        <%= form_for(@gift, html: { class: 'form-signup' }) do |f| %>
          <div class="form-group">
            <%= f.label :your_name%><br />
            <%= f.text_field :your_name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :your_email %><br />
            <%= f.email_field :your_email, autofocus: true, class: 'form-control' %>
            <p class="help-block">This is where you'll receive your receipt.</p>
          </div>


          <div class="form-group">
            <%= f.label :message %><br />
            <%= f.text_area :message, autofocus: true, class: 'form-control' %>
          </div>

          <h3>Gift Receiver</h3>
          <div class='form-inline'>
            <div class="form-group">
              <%= f.label :first_name%><br />
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :promo_code%><br />
            <%= f.text_field :promo_code, autocomplete: "off", class: 'form-control' %>
          </div>

          <span class='btn btn-lg btn-primary btn-block toggler'>Add Billing Information</span>
        </div>
        <div class='billing-info'>
          <h3>Billing Information</h3>

          <div class="form-group">
            <%= f.label :credit_card_number %><br />
            <%= f.text_field :credit_card_number, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :cvv %><br />
            <%= f.text_field :cvv, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :billing_address %><br />
            <%= f.text_field :billing_address, autofocus: true, class: 'form-control' %>
          </div>

          <div class='form-inline'>
            <div class="form-group">
              <%= f.label :zip %><br />
              <%= f.text_field :zip, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :state %><br />
              <%= f.text_field :state, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <h4>Cost $<span class='cost'>48</span></h4>
          <span class='btn btn-lg btn-primary btn-block toggler'>Give the gift of Joyful12!</span>
        </div>
      </div>
    <% end %>
    <div class='form-signup-photo'>
      <p>We're passionate about helping parents feel good about the food they feed their kids and
        helping families celebrate the JOY of mealtime together.<p>
    </div>
  </div>
</div>
